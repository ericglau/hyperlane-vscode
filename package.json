{
	"name": "hyperlane-vscode",
	"description": "Hyperlane VS Code",
	"contributors": [
		"Eric Lau",
		"Brian Kwong"
	],
	"version": "0.0.1",
	"license": "Apache-2.0",
	"icon": "H-logo.jpeg",
	"repository": {
		"type": "git",
		"url": "https://github.com/ericglau/hyperlane-vscode"
	},
	"publisher": "ericglau",
	"categories": [],
	"keywords": [
		"hyperlane"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Hyperlane VS Code",
			"properties": {
				"hyperlane.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"hyperlane.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"hyperlane.configDir": {
					"scope": "resource",
					"type": "string",
					"description": "The Hyperlane config directory, for example: /Users/username/hyperlane"
				},
				"hyperlane.privateKey": {
					"scope": "resource",
					"type": "string",
					"description": "Private key for deployments"
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"command": "hyperlane.generate.sample.config"
				}
			],
			"editor/context": [
				{
					"command": "hyperlane.generate.sample.config"
				}
			]
		},
		"commands": [
			{
				"command": "hyperlane.generate.sample.config",
				"category": "Hyperlane VS Code",
				"title": "Generate Sample Config"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.18.34",
		"@types/yargs": "^17.0.22",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"@vscode/vsce": "^2.19.0",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.8.0",
		"mocha": "^9.2.1",
		"prettier": "^2.8.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"sass": "^1.63.6"
	}
}
